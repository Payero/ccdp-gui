{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s[  %(lineno)4d ] - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "test_eng_handler": {
            "class": "ccdp_utils.EnvVarRotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "${CCDP_GUI}/logs/test_engine.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "info_file_handler": {
            "class": "ccdp_utils.EnvVarRotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "${CCDP_GUI}/logs/info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "error_file_handler": {
            "class": "ccdp_utils.EnvVarRotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "${CCDP_GUI}/logs/errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": ["console", "info_file_handler", "error_file_handler"],
            "propagate": "no"
        },
        "TestEngine": {
            "level": "DEBUG",
            "handlers": ["console", "test_eng_handler"],
            "propagate": "no"
        },
        "AmqClient": {
            "level": "DEBUG",
            "handlers": ["console", "info_file_handler"],
            "propagate": "no"
        },
        "server": {
            "level": "DEBUG",
            "handlers": ["console", "info_file_handler"],
            "propagate": "no"
        },
        "CsvReader": {
            "level": "DEBUG",
            "handlers": ["console", "info_file_handler"],
            "propagate": "no"
        }
    }
    
}
